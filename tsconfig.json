{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "@client/*": ["client/src*"]
    }
  }
}
